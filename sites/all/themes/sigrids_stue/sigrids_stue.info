name = "Sigrids Stue"
description = "Theme for Sigrids Stue website"
screenshot = "screenshot.png"
core = "6.x"
engine = "phptemplate"

base theme = "replicator"

;Regions
regions[topbar] = Topbar
regions[header] = Header
regions[top_region] = Top
regions[content] = Content
regions[content_bottom] = Content, Below
regions[left] = Left

;Stylesheets
stylesheets[screen][] = styles/sigrids-stue-styles.less
stylesheets[screen][] = styles/sigrids-stue-typography.less
stylesheets[screen][] = fonts/titilliumtext/titilliumtext.css
stylesheets[screen][] = fonts/bebasneue/bebasneue.css

;IE specific stylesheets
ie stylesheets[if IE 7][all][] = styles/sigrids-stue-ie7.less

;--------------------- scripts ------------------------------
scripts[] = scripts/jquery.example.min.js
scripts[] = scripts/common.js
